<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
            <div class="container">
              <div class="row">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-user style-1 rounded has-shadow-1"> 
                    <div class="form-header text-center">
                      <h2 class="form-header-title">Editing Book</h2>
                    </div>

                    <div class="form-body">

                      <!-- ここにform_forを追加します -->
                      <%= form_for(@book) do |f| %>
                        <div class="form-group has-icon">
                          <label class="control-label sr-only" for="inputEmail">Name</label>
                          <div>Title</div>
                          <%= f.text_field :title %>
                          <div>Opinion</div>
                          <%= f.text_field :body %>
                          <%=link_to "Show", book_path(@book) %>
                          <%=link_to"Back", books_path %>
                          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        </div>

                        <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      <% end %>
                      <% if @book.errors.any? %>
                        <div id="error_explanation" class="alert alert-danger">
                          <p>error</p>
                          <ul>
                            <% @book.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                            <% end %>
                          </ul>
                          <div class="container">
                            <div class="row">
                              <% if flash[:notice] %>
                                <%= flash[:notice] %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>