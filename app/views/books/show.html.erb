
     <div class="col-xs-3">
        <%= render 'users/list', user: @book.user %>

        <%= render 'books/list', book: @books %>
    </div>

     <div class="col-xs-9">
     <table class="table table-striped">
        <tr>
            <h2>Book detail</h2>
        </tr>

        <tr>
        <td>
            <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
                <%= @book.user.name %>
            <% end %>
        </td>
        <td>
        <%=@book.title %>
        </td>
        <td>
        <%= @book.body %>
        </td>
        <td>
        <% if @book.user == current_user %>
        <%=link_to"Edit", edit_book_path(@book), class: "btn btn-success" %>
        </td>
        <td>
        <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
        </td>
        <% end %>
        </tr>
     </table>
     </div>


