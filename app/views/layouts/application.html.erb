<!DOCTYPE html>
<html>
  <head>
    <title>NewBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-text navbar-right">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </p>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample7">
     <div class="col-lg-4" style="color: white;"><h1>Bookers</h1></div>
      <span class="nav navbar-right">
      <% if user_signed_in? %>
      <span class="nav navbar-nav">
        <li>
          <%=link_to "Home", user_path(current_user) , class: "glyphicon glyphicon-home" %>

      </li>
        <li>
          <%=link_to "Users", users_path, class: "glyphicon glyphicon-user"  %>
        </li>
        <li>
          <%=link_to "Books", books_path, class: "glyphicon glyphicon-book books" %>
        </li>
        <li>
          <%=link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
        </li>
      </span>
        
        <% else %>
      <span class="nav navbar-nav">
      <li>
          <%=link_to "Home", root_path, class: "glyphicon glyphicon-home" %>

      </li>
        <li>
          <%= link_to "About", "home/about", class: "glyphicon glyphicon-link" %>

        </li>
        <li>
          <%=link_to "Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
        </li>
        <li>
          <%=link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
        </li>
      </span>
      </span>
        <% end %>

      
      
    </div>
  </div>
</nav>
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <%= flash[:notice] %>
      <% end %>
    <%= yield %>
    </div>
  </div>
</body>
</html>
